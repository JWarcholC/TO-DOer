<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="63dp"
            android:layout_height="62dp"
            android:layout_marginBottom="3dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/imageButton2"
            app:layout_constraintEnd_toStartOf="@+id/fb_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar3"
            app:srcCompat="@drawable/facebook_icon" />

    <Button
            android:id="@+id/fb_btn"
            android:layout_width="274dp"
            android:layout_height="72dp"
            android:backgroundTint="#F82F7CFC"
            android:text="Login with Facebook"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/gmail_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

    <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="305dp"
            android:layout_height="20dp"
            android:progress="100"
            android:progressTint="#666666"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.039" />

    <Button
            android:id="@+id/login_btn"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:backgroundTint="#15BB25"
            android:text="Login"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/progressBar3"
            app:layout_constraintEnd_toStartOf="@+id/register_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi there! Welcome to:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About us"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vertical_progressbar2"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4"
            app:layout_constraintVertical_bias="0.422" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical_progressbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4"
            app:layout_constraintVertical_bias="0.422" />

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/vertical_progressbar2"
            app:layout_constraintStart_toEndOf="@+id/vertical_progressbar"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4"
            app:layout_constraintVertical_bias="0.422" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO-DOer"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.09" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="281dp"
            android:layout_height="38dp"
            android:text="Very simple things To-Do list. Helps you to manage your daily life without any hassle."
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.163" />

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="171dp"
            android:layout_height="19dp"
            android:layout_marginEnd="10dp"
            android:progress="100"
            android:progressTint="#666666"
            app:layout_constraintBottom_toTopOf="@+id/fb_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/register_btn" />

    <EditText
            android:id="@+id/password"
            android:layout_width="373dp"
            android:layout_height="45dp"
            android:hint="password"
            android:ems="10"
            android:inputType="textPersonName|textPassword"
            android:textColor="#A6000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar2"
            app:layout_constraintVertical_bias="0.13999999" />

    <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="369dp"
            android:layout_height="20dp"
            android:progress="100"
            android:progressTint="#9C000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.885" />

    <Button
            android:id="@+id/gmail_btn"
            android:layout_width="274dp"
            android:layout_height="72dp"
            android:backgroundTint="#F8CFCFCF"
            android:text="Login with Gmail"
            android:textColor="#444343"
            app:layout_constraintBottom_toTopOf="@+id/progressBar4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            app:layout_constraintTop_toBottomOf="@+id/fb_btn" />

    <Button
            android:id="@+id/register_btn"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:backgroundTint="#F8CFCFCF"
            android:text="Register"
            android:textColor="#444343"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/login_btn"
            app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
            android:id="@+id/login"
            android:layout_width="373dp"
            android:layout_height="45dp"
            android:hint="Login/e-mail"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#A6000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar2"
            app:layout_constraintVertical_bias="0.042" />

    <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="63dp"
            android:layout_height="62dp"
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/progressBar4"
            app:layout_constraintEnd_toStartOf="@+id/gmail_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"
            app:srcCompat="@drawable/gmail_icon" />

    <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/progressBar2"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.039" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="or"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/fb_btn"
            app:layout_constraintEnd_toStartOf="@+id/progressBar"
            app:layout_constraintStart_toEndOf="@+id/progressBar3"
            app:layout_constraintTop_toBottomOf="@+id/login_btn" />

    <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="171dp"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:progress="100"
            android:progressTint="#666666"
            app:layout_constraintBottom_toTopOf="@+id/fb_btn"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn" />

    <ProgressBar
            android:id="@+id/vertical_progressbar"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="5dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4"
            app:layout_constraintVertical_bias="0.441" />

    <ProgressBar
            android:id="@+id/vertical_progressbar2"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="5dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4"
            app:layout_constraintVertical_bias="0.42000002" />


</androidx.constraintlayout.widget.ConstraintLayout>